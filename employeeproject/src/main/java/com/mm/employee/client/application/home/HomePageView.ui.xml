<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel><h1>Employee Databse</h1>
    <g:Label text="Employee Id"/>
    <g:TextBox ui:field="id"> </g:TextBox>
    <g:Label>Employee Age</g:Label>
    <g:TextBox ui:field="age"> </g:TextBox>
    <g:Label>Employee Name</g:Label>
    <g:TextBox ui:field="name"> </g:TextBox>
    <g:Label>Employee Address</g:Label>
    <g:TextBox ui:field="address"> </g:TextBox>
    <g:Button ui:field="button">Submit</g:Button> 
    
    <g:Hyperlink ui:field="menu" targetHistoryToken="menu">Go to menu Page</g:Hyperlink>
    </g:HTMLPanel>
</ui:UiBinder>
