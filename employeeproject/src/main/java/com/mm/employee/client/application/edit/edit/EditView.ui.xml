<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:SimplePanel ui:field="main">
    <g:HTMLPanel><h1>Employee Edit details</h1>
    <g:Label >Employee Id</g:Label >
    <g:Label ui:field="id"></g:Label >
    <g:Label>Employee Age</g:Label>
    <g:TextBox ui:field="age"> </g:TextBox>
    <g:Label>Employee Name</g:Label>
    <g:TextBox ui:field="name"> </g:TextBox>
    <g:Label>Employee Address</g:Label>
    <g:TextBox ui:field="address"> </g:TextBox>
    <g:Button ui:field="save">Save</g:Button>
    
    <g:Hyperlink ui:field="menu" targetHistoryToken="menu">Go to menu Page</g:Hyperlink>
    </g:HTMLPanel>
     </g:SimplePanel>
</ui:UiBinder>
