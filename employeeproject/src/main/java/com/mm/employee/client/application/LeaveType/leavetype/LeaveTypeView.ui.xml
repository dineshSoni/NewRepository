<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:HTMLPanel ui:field="contentPanel">
		<table align="center">
			<hr />
			<tr>
				<td>

				</td>
				<td>
					<h3> LeaveType Details</h3>
				</td>
			</tr>
			<tr>
				<td>
					<g:Label>Assigned Leave For   </g:Label>
				</td>
				<td>
					<g:Label ui:field="employeename">name</g:Label>
					
				</td>
				<td>
					<g:Label>Employee Id   </g:Label>
				</td>
				<td><g:Label ui:field="employeeid"/>
				</td>	
			</tr>
			<tr>
				<td>
					<g:ListBox ui:field="availableLeaveTypes" multipleSelect="true"
						title="Allowed leavetype" width="150px">
						<g:item value="1">
							CASUALLEAVE
						</g:item>
						<g:item value="2">
							PRIVILAGELEAVE
						</g:item>
						<g:item value="3">
							SICKLEAVE
						</g:item>
					</g:ListBox>
				</td>
				<td>
					<g:Button ui:field="addButton"> ADD </g:Button>
					<g:Button ui:field="removeButton"> REMOVE </g:Button>
				</td>
				<td>
					<g:ListBox ui:field="assignedLeaveTypes" multipleSelect="true"
						title="Assigned leavetype" width="150px">
					</g:ListBox>
				</td>
			</tr>
		</table>
		<table align="center">
			<tr>
				<td>
					<g:Button ui:field="saveButton">SAVE</g:Button>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder>
